<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferPagesUI.RegisterGarage">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:text="Registro de Garaje"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    <EditText
        android:id="@+id/addressGarage"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:hint="Direccion"
        app:layout_constraintBottom_toTopOf="@+id/cvFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mpDireccion" />

    <EditText
        android:id="@+id/widthGarage"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ancho"
        app:layout_constraintBottom_toTopOf="@+id/cvFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toEndOf="@+id/addressGarage"
        app:layout_constraintTop_toBottomOf="@+id/mpDireccion" />

    <Button
        android:id="@+id/btnRegistrarGarage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="REGISTRAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent" />

    <CalendarView
        android:id="@+id/cvFecha"
        android:layout_width="254dp"
        android:layout_height="297dp"
        android:layout_marginBottom="76dp"
        android:dateTextAppearance="@style/TextAppearance.AppCompat.Body1"
        android:maxDate="12/31/2024"
        android:minDate="5/01/2024"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrarGarage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cvFecha"
        app:layout_constraintTop_toBottomOf="@+id/widthGarage"
        app:layout_constraintVertical_bias="0.482" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mpDireccion"
        android:layout_width="303dp"
        android:layout_height="117dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/cvFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>